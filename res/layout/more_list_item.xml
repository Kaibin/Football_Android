<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="44dip"
	android:orientation="horizontal">
	
	<ImageView 
		android:id="@+id/more_itme_imageview"
		android:layout_width="29dip"
		android:layout_height="29dip"
		android:layout_marginLeft="10dip"
		android:background="@drawable/more_item_1"
		android:layout_marginTop="10dip"
		/>

	<TextView
		android:id="@+id/more_item_textview1" 
		android:layout_width="150dip"
		android:layout_height="fill_parent"
		android:layout_toRightOf="@+id/more_itme_imageview"
		android:text="比分提示及推送设置"
		android:textSize="16sp"
		android:textColor="@color/black"
		android:paddingTop="3dip"
		android:layout_marginTop="10dip"
		android:layout_marginLeft="3dip"
		>
	</TextView>
	
	<ImageView 
		android:layout_width="29dip"
		android:layout_height="29dip"
		android:layout_alignParentRight="true"
		android:layout_marginLeft="20dip"
		android:background="@drawable/more_item_9"
		android:layout_marginTop="10dip"
		android:layout_marginRight="5dip"
		/>

</RelativeLayout>

    
