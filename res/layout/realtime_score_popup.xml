<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="256dip"
    android:layout_height="44dip"
    android:background="@drawable/livewindows"
    android:orientation="vertical" >
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/league_minutes"
    android:layout_width="wrap_content"
    android:layout_height="70dip"
    android:layout_centerHorizontal="true"
    android:orientation="vertical" 
    android:layout_alignParentLeft="true"	
    >
    
    <TextView android:id="@+id/live_league_name"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"	
		android:layout_alignParentLeft="true"	
		android:layout_marginLeft="10dip"
		android:gravity="center_vertical"
		android:layout_centerVertical="true"
        android:textColor="@color/live_change_score_text_color"
		android:text="英超"
		android:textSize="12sp" />
    
    <TextView android:id="@+id/live_start_time"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"		
		android:gravity="center_vertical"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/live_league_name"
		android:layout_marginLeft="20dip"
        android:textColor="@color/live_change_score_text_color"
		android:text="12'"
		android:textSize="12sp" />
    </RelativeLayout>
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="44dip"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="10dip"
    android:orientation="vertical" 
    android:layout_toRightOf="@+id/league_minutes">
    
     <TextView
         android:id="@+id/live_home_team_name"
         android:layout_width="wrap_content"
         android:layout_height="20dip"
         android:layout_alignParentTop="true"
         android:gravity="center_vertical"
         android:maxWidth="150dip"
         android:minWidth="50dip"
         android:text="曼彻斯特大学联合队"
         android:textColor="@color/live_change_score_text_color"
         android:textSize="12sp" />
    
    <TextView android:id="@+id/live_away_team_name"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"	
		android:minWidth="50dip"
		android:maxWidth="150dip"
		android:layout_below="@+id/live_home_team_name"	
		android:layout_centerHorizontal="true"
		android:gravity="center_vertical"
        android:textColor="@color/live_change_score_text_color"
		android:text="利物浦"
		android:textSize="12sp" />
    
    </RelativeLayout>
    
     <TextView
        android:id="@+id/live_home_team_score"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:layout_marginTop="2dip"
        android:text="3"
        android:textColor="@color/live_change_score_text_color"
	    android:textSize="12sp" />
     
    <TextView android:id="@+id/live_away_team_score"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"		
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="5dip"
        android:layout_below="@+id/live_home_team_score"
		android:gravity="center_vertical"
        android:textColor="@color/live_change_score_text_color"
		android:text="1"
		android:textSize="12sp" />
    
    

</RelativeLayout>