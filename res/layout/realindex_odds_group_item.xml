<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="59dip"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="34dip"
        android:background="@drawable/odds_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="34dip"
            android:layout_height="33dip"
            android:layout_marginRight="5dip" >
        </ImageView>

        <TextView
            android:id="@+id/leagueName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0dip"
            android:gravity="center"
            android:text="欧罗巴"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/matchTime"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dip"
            android:gravity="center"
            android:text="02/24"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/homeTeamName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="曼联"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/finishScore"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:text="VS"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/awayTeamName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="莫斯科中央陆军"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/odds_title_row"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:layout_gravity="top"
        android:background="@color/odds_title_bg_color"
        android:orientation="horizontal" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/odds_title_bg_color"
            android:orientation="vertical" >

            <Button
                android:layout_width="51dip"
                android:layout_height="25dip"
                android:background="@drawable/setbar_bg"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="公司"
                android:textColor="@color/odds_item_chupan_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="269dip"
            android:layout_height="25dip"
            android:layout_gravity="top"
            android:background="@color/odds_title_bg_color"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/setbar_bg"
                android:gravity="center"
                android:text=""
                android:textSize="12sp" />

            <TextView
                android:id="@+id/homeColumn"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/setbar_bg"
                android:gravity="center"
                android:text="上盘"
                android:textColor="@color/odds_title_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/middleColumn"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/setbar_bg"
                android:gravity="center"
                android:text="盘口"
                android:textColor="@color/odds_title_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/awayColumn"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/setbar_bg"
                android:gravity="center"
                android:text="下盘"
                android:textColor="@color/odds_title_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>